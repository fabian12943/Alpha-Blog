.container.mt-4.text-center
  %h1= @user.fullname + "'s profile"
  %h3.text-muted= "@" + @user.username
  .mt-3
    = image_tag gravatar_url_for(@user, size: 256), class: "avatar mx-auto d-block shadow mt-3", alt: "Avatar of #{@user.fullname}"
  .mt-4
    = link_to 'Edit profile information', edit_user_url(@user), class: 'btn btn-outline-primary btn-lg', type: 'button'
  .container.all-articles.mt-4
    %h3.text-center= @user.articles.count > 0 ? "All articles by #{@user.fullname}" : "Unfortunately #{@user.fullname} has not <br> published any articles yet ðŸ˜”".html_safe
    .row.align-items-lg-center.justify-content-center
      - @user.articles.each do |article|
        .col-lg-6.d-flex.align-self-stretch
          = render 'articles/article', article: article
