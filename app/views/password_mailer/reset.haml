      a:hover {text-decoration: underline !important;}
  %body{leftmargin: "0", marginheight: "0", marginwidth: "0", style: "margin: 0px; background-color: #f2f3f8;", topmargin: "0"}
    %table{bgcolor: "#f2f3f8", border: "0", cellpadding: "0", cellspacing: "0", style: "@import url(https://fonts.googleapis.com/css?family=Rubik:300,400,500,700|Open+Sans:300,400,600,700); font-family: 'Open Sans', sans-serif;", width: "100%"}
      %tr
        %td
          %table{align: "center", border: "0", cellpadding: "0", cellspacing: "0", style: "background-color: #f2f3f8; max-width:670px;  margin:0 auto;", width: "100%"}
            %tr
              %td{style: "height:80px;"}
            %tr
              %td{style: "text-align:center;"}
                %a{href: '#', target: "_blank", title: "logo"}
                  = image_tag(attachments['logo.png'].url, style: "width: 250px;")
            %tr
              %td{style: "height:20px;"}
            %tr
              %td
                %table{align: "center", border: "0", cellpadding: "0", cellspacing: "0", style: "max-width:670px;background:#fff; border-radius:3px; text-align:center;-webkit-box-shadow:0 6px 18px 0 rgba(0,0,0,.06);-moz-box-shadow:0 6px 18px 0 rgba(0,0,0,.06);box-shadow:0 6px 18px 0 rgba(0,0,0,.06);", width: "95%"}
                  %tr
                    %td{style: "height:40px;"}
                  %tr
                    %td{style: "padding:0 35px;"}
                      %h1{style: "color:#1e1e2d; font-weight:500; margin:0;font-size:32px;font-family:'Rubik',sans-serif;"}
                        = "Request to reset your password"
                      %span{style: "display:inline-block; vertical-align:middle; margin:29px 0 26px; border-bottom:1px solid #cecece; width:100px;"}
                      %p{style: "color:#455056; font-size:20px;line-height:24px; margin-top:0px; margin-bottom:30px;"}
                        = "Hi #{@user.first_name.titleize}. You recently requested to reset your password for your account. Please click the link below to reset it."
                      = link_to "Reset your password", password_reset_edit_url(token: @token), {style: 'font-size:25px;'}
                      %p{style: "color:#455056; font-size:15px; margin-top:30px;"}
                        = "The link will expire automatically in 1 hour."
                      %p{style: "color:#455056; font-size:15px; margin:0px;"}
                        = "If you did not request a password reset, please ignore this email or reply to let us know."
                  %tr
                    %td{style: "height:40px;"}
            %tr
              %td{style: "height:20px;"}
            %tr
              %td{style: "text-align:center;"}
                %p{style: "font-size:14px; color:rgba(69, 80, 86, 0.7411764705882353); line-height:18px; margin:0 0 0;"}
